<!-- checking if success is there and its length is not 0 (it is not an empty array) -->
<%if(success && success.length){ %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%=success %>
    <button
        type="button"
        class="btn-close small"
        data-bs-dismiss="alert"
        aria-label="Close"
    ></button>
</div>
<% } %>
<!-- checking if error is there and its length is not 0 (it is not an empty array) -->
<%if(error && error.length){ %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%=error %>
    <button
        type="button"
        class="btn-close small"
        data-bs-dismiss="alert"
        aria-label="Close"
    ></button>
</div>
<% } %>
